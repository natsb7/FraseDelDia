<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fondo6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentNoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/fondolila" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="360dp"
            android:layout_height="88dp"
            android:layout_margin="30dp"
            android:text="No hay pujas o ventas activas"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo3" />
    <TextView
        android:id="@+id/tvTituloNA"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009688"
        android:text="   Pujas/Ventas"
        android:textColor="#FAF9F9"
        android:textSize="34sp"
        android:textStyle="bold"
        />
</FrameLayout>